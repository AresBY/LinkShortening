@model IEnumerable<UrlPl>

<!DOCTYPE html>
<html>
<head>
    <title>Список ссылок</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Список ссылок</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Длинный URL</th>
                    <th scope="col">Сокращенный URL</th>
                    <th scope="col">Дата создания</th>
                    <th scope="col">Количество переходов</th>
                    <td colspan="col">
                        <form method="get" action="/Home/CreatePress">
                            <button type="submit" class="btn btn-success">Создать</button>
                        </form>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var link in Model)
                {
                    <tr>
                        <td><a href="@link.LongUrl">@link.LongUrl</a></td>
                        <td><a href="@link.ShortUrl">@link.ShortUrl</a></td>
                        <td>@link.Creation</td>
                        <td>@link.TransitionCount</td>
                        <td>
                            <form method="get" action="/Home/EditPress/@link.Id">
                                <button type="submit" class="btn btn-primary">Редактировать</button>
                            </form>
                        </td>
                        <td>
                            <form method="get" action="/Home/OnDelete/@link.Id" onsubmit="return confirmDelete()">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete() {
            return confirm("Вы уверены, что хотите удалить эту ссылку?");
        }
    </script>

</body>
</html>
